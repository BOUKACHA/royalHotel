{% extends 'base.html.twig' %}

{% block title %}Mon compte{% endblock %}

{% block body %}
<h1>Mon compte</h1>
<ul class="nav nav-tabs" id="myTab" role="tablist">
    <li class="nav-item" role="presentation">
        <button class="nav-link active" id="home-tab" data-bs-toggle="tab" data-bs-target="#home-tab-pane" 
        type="button" role="tab" aria-controls="home-tab-pane" aria-selected="true">Mes information</button>
    </li>
    <li class="nav-item" role="presentation">
        <button class="nav-link" id="profile-tab" data-bs-toggle="tab" data-bs-target="#profile-tab-pane"
        type="button" role="tab" aria-controls="profile-tab-pane" aria-selected="false">Mes favoris</button>
    </li>
</ul>
<div class="tab-content py-3" id="myTabContent">
    <div class="tab-pane fade show active" id="home-tab-pane" role="tabpanel" aria-labelledby="info-tab" tabindex="0">
        {{ form_start(form) }}
        {{ form_label(form.avatar, 'Votre avatar', { 'label_attr':  {'class' : "w-100"}}) }}
        {{ form_widget(form.avatar.imageFile) }}
    <div class="d-flex flex-wrap ">
    <div class="col-12 col-md-4 pe-1">
        {{ form_label(form.email, 'Votre email', { 'label_attr': { 'class' : "w-100"}}) }}
        {{ form_widget(form.email) }}
    </div>
    <div class="col-12 col-md-4 px-1">
        {{ form_label(form.plainPassword.first, 'Mot de passe', { 'label_attr': { 'class' : "w-100"}}) }}
        {{ form_widget(form.plainPassword.first) }}
        {{ form_help(form.plainPassword) }}
    </div>
    <div class="col-12 col-md-4 ps-1">
        {{ form_label(form.plainPassword.second, 'Comfirmer le mot de passe', { 'label_attr': { 'class' : "w-100"}}) }}
        {{ form_widget(form.plainPassword.second) }}
    </div>
    </div>
    <div class="d-flex flex-wrap">
        <div class="col-12 col-md-4 pe-1">
        {{ form_label(form.nom, 'Votre nom', { 'label_attr': {'class' : "w-100"}} ) }}
        {{ form_widget(form.nom) }}
        </div>
        <div class="col-12 col-md-4 px-1">
        {{ form_label(form.prenom, 'Votre prénom', { 'label_attr': {'class' : "w-100"}} ) }}
        {{ form_widget(form.prenom) }}
        </div>
        <div class="col-12 col-md-4 ps-1">
        {{ form_label(form.tel, 'Votre téléphone', { 'label_attr': {'class' : "w-100"}} ) }}
        {{ form_widget(form.tel) }}
        </div>

    </div>
        {{ form_label(form.adresse1, 'Votre adresse', { 'label_attr': {'class' : "w-100"}} ) }}
        {{ form_widget(form.adresse1) }}
        {{ form_label(form.adresse2, 'Complément d\'adresse', { 'label_attr': {'class' : "w-100"}} ) }}
        {{ form_widget(form.adresse2) }}
    <div class="d-flex flex-wrap">
    <div class="col-12 col-md-4 pe-1">
        {{ form_label(form.codePostal, 'Votre code postal', { 'label_attr': {'class' : "w-100"}}) }}
        {{ form_widget(form.codePostal) }}
    </div>
    <div class="col-12 col-md-4 pe-1">
        {{ form_label(form.ville, 'Votre ville', { 'label_attr': {'class' : "w-100"}}) }}
        {{ form_widget(form.ville) }}
    </div>
    <div class="col-12 col-md-4 ps-1">
        {{ form_label(form.pays, 'Votre pays', { 'label_attr': {'class' : "w-100"}}) }}
        {{ form_widget(form.pays) }}
    </div>
    </div>
    {# {{ form_widget(form) }} #}
        {{ form_widget(form.modifier) }}
        {{ form_end(form) }}
    </div>
    <div class="tab-pane fade" id="profile-tab-pane" role="tabpanel" aria-labelledby="favoris-tab" tabindex="0">favoris</div>
</div>
{% endblock %}
